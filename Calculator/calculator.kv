<MyGrid>:
	id: calculator
	display: input
	GridLayout:
		cols:1
		size: root.width, root.height

		CustomTextInput:
			id: input
			font_name: 'Ocraext.ttf'
			hint_text: '0'
			halign: 'right'
			multiline: False
			font_size: "50sp"
			size_hint: (1, None)
			height: 135
			
		GridLayout:
			cols:4

			Button:
				text: "("
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += "*"+self.text

			Button:
				text: ")"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "%"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "/"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "7"
				font_size: "50sp"
				font_name: 'Ocraext.ttf'
				on_press: input.text += self.text

			Button:
				text: "8"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "9"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "*"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "4"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "5"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "6"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "-"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "1"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "2"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text
					
			Button:
				text: "3"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "+"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "."
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "0"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text += self.text

			Button:
				text: "AC"
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: input.text = " "

			Button:
				text: "="
				font_name: 'Ocraext.ttf'
				font_size: "50sp"
				on_press: calculator.calculate(input.text)